
@{
    ViewBag.Title = "Event";
}
@section AddToHead{
    @Styles.Render("~/Content/Events-News/css")
    <link href="~/Content/swiper.css" rel="stylesheet" />
    <style>
        h2 {
            margin: 0;
        }

        article > header {
            width: 100%;
            min-height: 300px;
            position: relative;
        }

        #img-main {
            max-width: 100%;
            min-height: 300px;
            max-height: 500px;
        }

        #info {
            position: absolute;
            bottom: 30px;
            right: 30px;
            margin-right: 15px;
            color: white;
        }

            #info .btn {
                margin-right: 15px;
            }

        #div-address {
            position: absolute;
            bottom: 0;
            right: 100%;
        }

            #div-address > span {
                display: block;
                font-size: 18px;
                font-weight: 500;
            }
        /*article > header > * > * {
                    position: absolute;
                    bottom: 0;
                    right: 0;
                }*/

        .swiper-container-full-slide {
            width: 100%;
            height: 500px;
            overflow: hidden;
        }

        .swiper-container-thumbnail-slide {
            box-sizing: border-box;
            padding: 30px;
            width: 100%;
            height: 200px;
            overflow: hidden;
        }

        .swiper-slide {
            text-align: center;
            font-size: 18px;
            background: #fff;
            /* Center slide text vertically */
            display: -webkit-box;
            display: -ms-flexbox;
            display: -webkit-flex;
            display: flex;
            -webkit-box-pack: center;
            -ms-flex-pack: center;
            -webkit-justify-content: center;
            justify-content: center;
            -webkit-box-align: center;
            -ms-flex-align: center;
            -webkit-align-items: center;
            align-items: center;
            /*Change background-image for each slide*/
            background: #929696 url("/Assets/Images/image-empty.jpg") center no-repeat;
            background-size: contain;
        }

        .swiper-pagination {
            bottom: 0;
        }

        @@media (max-width: 767px) {
            #div-address {
                width: 133.3333%;
                /*position: relative;*/
                right: 0;
                margin-top: 15px;
                top: 100%;
                bottom: initial;
            }

                #div-address .text-right {
                    text-align: center;
                }

            #article-body {
                margin-top: 120px;
            }

            .swiper-container-full-slide {
                height: 200px;
            }

            .swiper-container-thumbnail-slide {
                padding: 15px;
                height: 120px;
            }
        }
    </style>
}
<article>
    <header>
        <div class="col-xs-9 pull-right img-main">
            <figure class="row">
                <img class="img-responsive pull-right" id="img-main" src="~/Assets/Images/image-empty.jpg" alt="Main image of event" />

            </figure>
            <div id="info">
                <div class="row">
                    <div class="text-right">
                        <time datetime="2018-06-28" id="date"><!--<<<<<Time text format-->2018/06/28</time>
                    </div>
                </div>
                <div class="row">
                    <div class="text-right">
                        <time datetime="PT3H" id="time"><!--<<<<<Time text format-->8:00 - 11:00</time>
                    </div>
                </div>
                <div class="row">
                    <div class="text-right pull-right">
                        <h2 id="main-title">نام رویداد</h2>
                    </div>
                </div>
                <div class="row">
                    <div class="text-right pull-right">
                        <span class="btn btn-info" id="tag-0">تگ صفر</span>
                    </div>
                    <div class="text-right pull-right">
                        <span class="btn btn-info" id="tag-1">تگ دو</span>
                    </div>
                    <div class="text-right pull-right">
                        <span class="btn btn-info" id="tag-2">تگ سه</span>
                    </div>
                    <div class="text-right pull-right">
                        <span class="btn btn-info" id="tag-3">تگ چهار</span>
                    </div>
                    <div class="text-right pull-right">
                        <span class="btn btn-info" id="tag-4">تگ پنج</span>
                    </div>
                </div>
            </div>
            <div class="col-xs-4" id="div-address">
                <span class="text-right">آدرس</span>
                <div class="row">
                    <p id="address" class="text-right col-xs-12">تهران، خیابان هویجیان، کوچه بوق بوق، شهرک آزمایشی، بلوک شماره زیاد، زنگ فلانی.</p>
                </div>
                <div class="row">
                    <button class="btn btn-success col-sm-12 col-xs-8 col-xs-offset-2 col-sm-offset-0" id="btn-share">به اشتراک گذاری</button>
                </div>
            </div>
        </div>
    </header>
    <div class="row" id="article-body">
        <h3 class="col-xs-12 text-right">تیتر داینامیک</h3>
        <p class="col-xs-12 text-right">لورم ایپسوم متن ساختگی با تولید سادگی نامفهوم از صنعت چاپ و با استفاده از طراحان گرافیک است. چاپگرها و متون بلکه روزنامه و مجله در ستون و سطرآنچنان که لازم است و برای شرایط فعلی تکنولوژی مورد نیاز و کاربردهای متنوع با هدف بهبود ابزارهای کاربردی می باشد. کتابهای زیادی در شصت و سه درصد گذشته، حال و آینده شناخت فراوان جامعه و متخصصان را می طلبد تا با نرم افزارها شناخت بیشتری را برای طراحان رایانه ای علی الخصوص طراحان خلاقی و فرهنگ پیشرو در زبان فارسی ایجاد کرد. در این صورت می توان امید داشت که تمام و دشواری موجود در ارائه راهکارها و شرایط سخت تایپ به پایان رسد وزمان مورد نیاز شامل حروفچینی دستاوردهای اصلی و جوابگوی سوالات پیوسته اهل دنیای موجود طراحی اساسا مورد استفاده قرار گیرد.</p>
        <div class="swiper-container-full-slide col-xs-12">
            <div class="swiper-wrapper">
                <div class="swiper-slide">Slide 1</div>
                <div class="swiper-slide">Slide 2</div>
                <div class="swiper-slide">Slide 3</div>
                <div class="swiper-slide">Slide 4</div>
                <div class="swiper-slide">Slide 5</div>
                <div class="swiper-slide">Slide 6</div>
                <div class="swiper-slide">Slide 7</div>
                <div class="swiper-slide">Slide 8</div>
                <div class="swiper-slide">Slide 9</div>
                <div class="swiper-slide">Slide 10</div>
            </div>
            <!-- Add Navigation -->
            <div class="swiper-button-next swiper-button-white"></div>
            <div class="swiper-button-prev swiper-button-white"></div>
            <!-- Add Pagination -->
            <div class="swiper-pagination"></div>
        </div>

        <div class="swiper-container-thumbnail-slide col-xs-12">
            <div class="swiper-wrapper">
                <div class="swiper-slide">Slide 1</div>
                <div class="swiper-slide">Slide 2</div>
                <div class="swiper-slide">Slide 3</div>
                <div class="swiper-slide">Slide 4</div>
                <div class="swiper-slide">Slide 5</div>
                <div class="swiper-slide">Slide 6</div>
                <div class="swiper-slide">Slide 7</div>
                <div class="swiper-slide">Slide 8</div>
                <div class="swiper-slide">Slide 9</div>
                <div class="swiper-slide">Slide 10</div>
            </div>
            <!-- Add Navigation -->
            <div class="swiper-button-next swiper-button-white"></div>
            <div class="swiper-button-prev swiper-button-white"></div>
            <!-- Add Pagination -->
            <div class="swiper-pagination"></div>
        </div>
</article>
@section Scripts{
    <script src="~/Scripts/swiper.min.js"></script>
    <script>
        (function () {
            var swiper_full = new Swiper('.swiper-container-full-slide', {
                navigation: {
                    nextEl: '.swiper-button-next',
                    prevEl: '.swiper-button-prev',
                }, pagination: {
                    el: '.swiper-pagination',
                },
            });
            function init_swiper(_width) {
                //--------------------------------------------------------------------
                if (Number(_width) > 767) {
                    //--------------------------------------------------------------------

                    swiper_thumb = new Swiper('.swiper-container-thumbnail-slide', {
                        slidesPerView: 6,
                        spaceBetween: 15,
                        navigation: {
                            nextEl: '.swiper-button-next',
                            prevEl: '.swiper-button-prev',
                        },
                        pagination: {
                            el: '.swiper-pagination',
                            clickable: true,
                        },
                    });
                    //--------------------------------------------------------------------
                } else {
                    swiper_thumb = new Swiper('.swiper-container-thumbnail-slide', {
                        slidesPerView: 4,
                        spaceBetween: 15,
                        navigation: {
                            nextEl: '.swiper-button-next',
                            prevEl: '.swiper-button-prev',
                        },
                        pagination: {
                            el: '.swiper-pagination',
                            clickable: true,
                        },
                    });
                }
            }
            init_swiper(window.innerWidth);
            window.onresize = function () {
                init_swiper(window.innerWidth);
            }
        })();
    </script>
}